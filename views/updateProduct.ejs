<html>
  <body>
    <form action="/products/<%= product.id %>/edit" method="POST">
      <% if (message) { %>
      <p>Whoops! <%=message%></p>
      <% }%> <% if (error) { %>
      <p>Whoops! <%=error%></p>
      <% }%>
      <label>Product:</label>
      <input name="name" value="<%= product.name %>" />
      <label for="price">Price:</label>
      <input name="price" id="price" value="<%= product.price%>" />
      <label>Brand:</label>
      <input name="brand" value="<%= product.brand %>" />
      <label>Category:</label>
      <input name="category" value="<%= product.category %>" />
      <button>submit</button>
    </form>
  </body>
</html>
