<html>
  <head>
    <link rel="stylesheet" href="/categoryProducts.css" />
  </head>
  <body>
    <div>
      <% if (products.length === 0) { %>
      <div class="noProds">
        <h1>No products yet</h1>
        <a
          class="link"
          href="/products/newProduct"
          >add a product</a
        >
        <a
          class="link"
          href="/"
          >home</a
        >
      </div>
      <% } else { %>
      <div class="inventoryParentGrid">
        <div class="categoryName"><%= catName %></div>
        <div class="search-add">
          <div>search</div>
          <a
            class="link"
            href="/products/newProduct"
            ><p>add a product</p></a
          >
          <a class="link" href="/">
            home
          </a>
        </div>
          <table class="inventory-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quanity</th>
                <th>Options</th>
              </tr>
            </thead>

            <tbody>
                <% products.forEach(product => { %>
                  <tr class="productInv">
                    <td><%= product.name %></td>
                    <td><%= product.brand %></td>
                    <td><%= product.category %></td>
                    <td>$<%= product.price %></td>
                    <td><%= product.quantity%></td>
                    <td class="options">
                      <a class="edit" href="/products/<%=product.name%>/edit">edit</a>
                      <form class="form" action="/products/<%=product.name%>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this product?');">
                        <button class="dlt">delete</button>
                      </form>
                    </td>
                  </tr>
              <% }) %>
            </tbody>
          </table>
          <% } %>
    </div>
  </body>
</html>
